@using Task.Models
<section id="teacher">
    <h1 class="section-title">Teacher  </h1>
    <div class="container">
        <div class="row">
            @foreach (var item in ViewData["Teachers"] as List<Teacher>)
            {
                <div class="col">
                    <div class="card" style="width:400px">
                        <img class="card-img-top" src="~/assets/img/1-2-120x120.webp" alt="Card image">
                        <div class="card-body">
                            <h4 class="card-title">@item.Title</h4>
                            <p class="card-text">ixtisas: @item.Specialty</p>
                            <p class="card-text" style="color: black">
                                @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
</section>